@model Blog
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="blog" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <img src="~/Upload/@Model.Image" alt="Alternate Text" width="100" />
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CategoryID" class="form-label">Category</label>
                    <select class="form-control" asp-for="@Model.CategoryID" asp-items="@(new SelectList(ViewBag.Categories, "ID", "Name"))">
                        <option selected>Select category</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <textarea class="form-control" asp-for="@Model.Content"></textarea>
                </div>
                <input asp-for="@Model.ID" hidden />
                <input asp-for="@Model.Image" hidden />
                @*<input asp-for="@Model.UserID" hidden />*@
                <input asp-for="@Model.CreateDate" hidden />

                <button type="submit" class="btn btn-primary"><i class="far fa-edit"></i></button>
            </form>
        </div>
    </div>
</div>

